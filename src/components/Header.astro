---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'
import { DarkModeToggle } from '@/components/DarkModeToggle'
---

<header class="w-full max-w-6xl p-4">
	<nav class="flex justify-between">
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/" data-astro-prefetch>Home</HeaderLink>
			<HeaderLink href="/blog" data-astro-prefetch>Blog</HeaderLink>
			<HeaderLink href="/about" data-astro-prefetch>About</HeaderLink>
		</div>
		<DarkModeToggle client:load />
	</nav>
</header>
<style>
	header {
		margin: 0;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		padding: 0 1em;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	nav a {
		border-bottom: 4px solid transparent;
		padding: 1em 0.5em;
		color: var(--black);
		text-decoration: none;
	}
	nav a.active {
		border-bottom-color: hsl(var(--black));
		text-decoration: none;
	}

	nav a.active:hover {
		border-bottom-color: hsl(var(--black));
	}

	nav a:hover {
		color: hsl(var(--muted-foreground));
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
